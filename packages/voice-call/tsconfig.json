{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "types",
    "../../node_modules/vite/client.d.ts"
  ],
  "exclude": [
    "dist"
  ]
}